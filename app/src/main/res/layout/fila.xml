<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listaeventos">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/eventi_id_txt"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:layout_marginStart="152dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/nombre_txt"
                tools:layout_editor_absoluteY="15dp" />

            <TextView
                android:id="@+id/nombre_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="evento"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/direcion_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="direccion"
                app:layout_constraintStart_toStartOf="@+id/nombre_txt"
                app:layout_constraintTop_toBottomOf="@+id/nombre_txt" />

            <TextView
                android:id="@+id/fecha_txt"
                android:layout_width="65dp"
                android:layout_height="21dp"
                android:text="fecha"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/direcion_txt"
                app:layout_constraintTop_toBottomOf="@+id/direcion_txt" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="94dp"
                android:layout_height="96dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>